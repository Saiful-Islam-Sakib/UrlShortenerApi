{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "AllowedHosts": "*",

  "Serilog": {
    "Using": [ "Serilog.Sinks.Console", "Serilog.Sinks.File" ],
    "MinimumLevel": "Verbose",
    "WriteTo": [
      {
        "Name": "Console",
        "Args": {
          "outputTemplate": "[{Timestamp:HH:mm:ss}] {SourceContext} [{Level}] {Message}{NewLine}{Exception}"
        }
      },
      {
        "Name": "File",
        "Args": {
          "path": "Logs/logs.txt",
          "outputTemplate": "[{Timestamp:HH:mm:ss}] {SourceContext} [{Level}] {Message}{NewLine}{Exception}",
          "formatter": {
            "type": "Serilog.Formatting.Compact.CompactJsonFormatter, Serilog.Formatting.Compact"
          }
        }
      }
    ],
    "Enrich": [
      "FromLogContext",
      "WithMachineName",
      "WithThreadId"
    ],
    "Properties": {
      "Application": "UrlShortene.API"
    }
  },

  "ConnectionStrings": {
    "RedisDbContext": "localhost:6379",
    //"ShortUrlDbContext": "Data Source=SIS-DESKTOP; Initial Catalog=URLShortener; User ID=skb_urlShortener; Password=123456; TrustServerCertificate=True; timeout=3600",
    "ShortUrlDbContext": "Data Source=SIS-HP; Initial Catalog=URLShortener; User ID=skb_urlShortener; Password=123456; TrustServerCertificate=True; timeout=3600",

    //"RedisDbContext": "localhost:6380",
    //"ShortUrlDbContext": "Data Source=localhost,1450; Initial Catalog=URLShortener; User ID=skb_urlShortener; Password=123456; TrustServerCertificate=True; timeout=3600"
  },

  "SnowFlakeConfigurationSettings": {
    "MaxNumberOfBitsInMachineId": 10,
    "MaxNumberOfBitsInSequenceId": 12,
    "InitialMachineId": 0,
    "InitialSequenceId": 0
  }
}
